source ~/.dotfiles/zsh/aliases.zsh
source ~/.dotfiles/zsh/settings.zsh
source ~/.dotfiles/zsh/prompt.zsh
source ~/.dotfiles/zsh/git.zsh
source ~/.dotfiles/zsh/history.zsh
source ~/.dotfiles/zsh/secrets.zsh
source ~/.dotfiles/zsh/claude.zsh

export FZF="$HOME/.fzf.zsh"
[ -f $FZF ] && source $FZF

# claude setup
export LOCAL_BIN="$HOME/.local/bin"
[ -d "$LOCAL_BIN" ] && export PATH="$LOCAL_BIN:$PATH"

export ASDF=$(brew --prefix asdf)
[ -d $ASDF ] && export PATH="${ASDF_DATA_DIR:-$HOME/.asdf}/shims:$PATH"

export PATH="/opt/homebrew/opt/mariadb@10.11/bin:$PATH"
